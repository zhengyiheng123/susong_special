<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/material_white"
    android:layout_height="@dimen/height_96">
    <CheckBox
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_centerVertical="true"
        android:id="@+id/cb_check"
        android:button="@null"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_shopchart_xuanze"
        />
    <RelativeLayout
        android:paddingLeft="@dimen/padding_8"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_toRightOf="@+id/cb_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_96">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/width_104"
            android:layout_height="78dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_alignTop="@+id/iv_img"
            android:text="宿松小黄鱼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img"
            />
        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_16"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_price"
                android:layout_marginTop="@dimen/margin_8"
                android:textColor="@color/theme_color"
                android:text="￥32"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/margin_12"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_24"
            >
            <ImageView
                android:id="@+id/iv_release"
                android:src="@mipmap/release"
                android:gravity="center"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_18"
                android:paddingRight="@dimen/padding_4"
                android:paddingLeft="@dimen/padding_4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_red_rec"
                />
            <EditText
                android:id="@+id/et_num"
                android:focusable="false"
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:text="1"
                android:layout_marginRight="@dimen/margin_4"
                android:layout_marginLeft="@dimen/margin_4"
                android:background="@drawable/shape_red_rec"
                android:layout_width="@dimen/width_32"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/iv_add"
                android:src="@mipmap/add_count"
                android:textSize="@dimen/text_18"
                android:paddingRight="@dimen/padding_4"
                android:paddingLeft="@dimen/padding_4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_red_rec"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_marginRight="@dimen/margin_12"
            android:src="@mipmap/ic_error"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>