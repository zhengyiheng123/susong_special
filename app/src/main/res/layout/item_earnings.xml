<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@mipmap/rank_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/earnings_iv"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/head"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/earnings_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Taylor Swift"
                android:textColor="@color/material_textBlack_black"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/earnings_tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="一级"
                android:textColor="@color/material_red_A400"
                android:textSize="@dimen/text_14" />


        </LinearLayout>

        <TextView
            android:id="@+id/earnings_tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:text="葡萄美酒夜光杯"
            android:textColor="@color/material_textBlack_secondaryText"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_leave_a_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/bg_generalize"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:text="留言"
            android:textColor="@color/material_white" />
    </LinearLayout>


</LinearLayout>