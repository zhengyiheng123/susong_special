<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@drawable/bg_test" />

    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_test"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginLeft="12dp"
            android:scaleType="matrix"
            android:background="@mipmap/logo_bai"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="  乔 治 金 瀚"
            android:textColor="@color/material_textWhite_text"
            android:textSize="10sp" />
        <FrameLayout
            android:layout_width="50dp"
            android:id="@+id/home_frame"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/menu" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/material_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/store" />

            <RelativeLayout
                android:id="@+id/mine_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/bg_radius_10">

                <TextView
                    android:id="@+id/mine_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="Taylor Swift"
                    android:textColor="@color/material_textBlack_black"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/mine_tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_tv_name"
                    android:layout_centerHorizontal="true"
                    android:padding="4dp"
                    android:text=""
                    android:textColor="@color/material_textBlack_black" />

                <TextView
                    android:id="@+id/mine_tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_tv_id"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/zhanghuyue"
                    android:text="账户余额"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/mine_tv_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_tv_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/wodeshouyi"
                    android:text="我的会员"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/mine_tv_gongyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/mine_tv_id"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/gongyijin"
                    android:text="爱心金额"
                    android:textSize="13sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_rl"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radius_10"
                android:elevation="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/wodedingdan" />

                    <TextView
                        android:id="@+id/mine_tv_order"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/jiantou"

                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="我的订单"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="48dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/tichengdingdan" />

                    <TextView
                        android:id="@+id/mine_tv_commission_order"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/jiantou"

                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="提成订单"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="48dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"

                        android:src="@mipmap/paihangbang" />

                    <TextView
                        android:id="@+id/mine_tv_rank"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/jiantou"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="排行榜"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="48dp"
                    android:background="@color/line" />
                <RelativeLayout
                    android:id="@+id/mine_tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp">

                    <ImageView
                        android:id="@+id/wodeshoucang"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/wodexiaoxi" />

                    <TextView
                        android:id="@+id/mine_tv_messages"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/wodeshoucang"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_12"
                        android:text="我的消息"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />

                    <View
                        android:id="@+id/view_circle"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/mine_tv_messages"
                        android:background="@drawable/shape_circle_red"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/jiantou" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="48dp"
                    android:background="@color/line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/wodeshoucang" />

                    <TextView
                        android:id="@+id/mine_tv_collection"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/jiantou"

                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="我的收藏"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="48dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/erweima111" />

                    <TextView
                        android:id="@+id/mine_tv_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/jiantou"

                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="我的二维码"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="48dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/shezhi" />

                    <TextView
                        android:id="@+id/mine_tv_setting"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableRight="@mipmap/jiantou"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="设置"
                        android:textColor="@color/material_textBlack_black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/mine_iv_head"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_alignTop="@id/mine_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-44dp"
                android:src="@mipmap/head" />

            <ImageView
                android:id="@+id/mine_iv_information"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignTop="@id/mine_rl"
                android:layout_marginRight="28dp"
                android:layout_marginTop="-26dp"
                android:layout_toLeftOf="@id/mine_iv_head"
                android:background="@mipmap/edit" />

            <ImageView
                android:id="@+id/mine_iv_service"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignTop="@id/mine_rl"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="-26dp"
                android:layout_toRightOf="@id/mine_iv_head"
                android:background="@mipmap/kefu6666" />

        </RelativeLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/material_amber_A700" />

</LinearLayout>