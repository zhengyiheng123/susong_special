<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_white">

    <RelativeLayout
        android:id="@+id/news_rl_type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@drawable/bg_bottom_line"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/news_type1_iv"
            android:layout_width="128dp"
            android:layout_height="75dp"

            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/news_type1_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
           android:layout_alignBottom="@id/news_type1_iv"
            android:layout_toLeftOf="@id/news_type1_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_type1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10分钟前"
                android:textColor="@color/material_amber_A200"
                android:textSize="@dimen/text_14" />

            <ImageView

                android:layout_width="68dp"
                android:layout_height="15dp"
                android:background="@mipmap/logo_hui"
                android:layout_marginLeft="8dp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="12dp"
                 android:layout_weight="1"
                 />

            <ImageView
                android:id="@+id/news_type1_delete"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:visibility="gone"
                android:src="@mipmap/close" />

        </LinearLayout>

        <TextView
            android:id="@+id/news_type1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/news_type1_ll"
            android:layout_alignTop="@id/news_type1_iv"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/news_type1_iv"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="红酒-葡萄PUDAO wines-世界精品葡萄酒奢华酒会"
            android:textColor="@color/material_textBlack_black"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/news_type2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:background="@drawable/bg_bottom_line"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_type12_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="红酒-葡萄PUDAO wines-世界精品葡萄酒奢华酒会"
            android:textColor="@color/material_textBlack_black"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/news_type2_iv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                 />

            <ImageView
                android:id="@+id/news_type2_iv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                 />

            <ImageView
                android:id="@+id/news_type2_iv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                 />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/news_type2_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/news_type1_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_type2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10分钟前"
                android:textColor="@color/material_amber_A200"
                android:textSize="@dimen/text_14" />

            <ImageView

                android:layout_width="68dp"
                android:layout_height="15dp"
                android:background="@mipmap/logo_hui"
                android:layout_marginLeft="8dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/news_type2_delete"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:visibility="gone"
                android:background="@mipmap/close" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>