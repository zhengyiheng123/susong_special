<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
     android:paddingBottom="32dp"
    android:background="@mipmap/yinyingbeijing"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commission_iv_head"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/commission_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/material_grey_800"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:text="提成"
                android:textColor="@color/material_grey_800"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/commission_tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥00"
                android:textColor="@color/material_red_A400"
                android:textSize="@dimen/text_18" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/commission_iv"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/commission_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/commission_iv"
            android:layout_toRightOf="@id/commission_iv"
            android:text=""
            android:textColor="@color/material_amber_A700"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/commission_tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/commission_tv_title"
            android:layout_toRightOf="@id/commission_iv"
            android:text=""
            android:textColor="@color/material_amber_A100"
            android:textSize="@dimen/text_14" />


        <TextView
            android:id="@+id/commission_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commission_tv_title1"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/commission_iv"
            android:text="￥200.00  x1"
            android:textColor="@color/material_grey_800"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/commission_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commission_tv_title1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:text="2017.05.26"
            android:textColor="@color/material_grey_800"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>
</LinearLayout>