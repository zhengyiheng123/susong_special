<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/bg_top"
        />

    <ImageView
        android:id="@+id/login_iv_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_88"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginRight="@dimen/margin_24"
        android:layout_marginLeft="@dimen/margin_24"
        android:id="@+id/login_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_5"
        android:elevation="10dp"
        android:layout_below="@+id/login_iv_head"
        >

        <EditText
            android:inputType="phone"
            android:id="@+id/login_edt_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginRight="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_28"
            android:background="@drawable/bg_login"
            android:drawableLeft="@mipmap/zhanghao"
            android:drawablePadding="@dimen/padding_12"
            android:hint="请输入11位手机号码"
            android:paddingLeft="@dimen/padding_12"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/login_edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_below="@id/login_edt_user"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginRight="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_16"
            android:inputType="textPassword"
            android:background="@drawable/bg_login"
            android:drawableLeft="@mipmap/mima"
            android:drawablePadding="@dimen/padding_12"
            android:hint="请输入密码"
            android:paddingLeft="@dimen/padding_20"
            android:textSize="@dimen/text_14" />

        <CheckBox
            android:id="@+id/login_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_edt_password"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_20"
            android:button="@null"
            android:drawableLeft="@drawable/bg_fuxuankuang"
            android:drawablePadding="@dimen/padding_8"
            android:text="显示密码"
            android:textColor="@color/material_textBlack_secondaryText"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/login_tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/login_edt_password"
            android:layout_marginRight="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_20"
            android:drawablePadding="@dimen/padding_8"
            android:text="忘记密码？"
            android:textColor="@color/material_textBlack_secondaryText"
            android:textSize="@dimen/text_14" />

        <Button
            android:textSize="@dimen/text_18"
            android:text="立即登录"
            android:textColor="@color/material_white"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_below="@id/login_cb"
            android:layout_centerHorizontal="true"
            android:id="@+id/login_btn_login"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginTop="@dimen/padding_20"
            android:background="@drawable/bg_generalize" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_jiubei"
        android:layout_width="129dp"
        android:layout_height="120dp"
        android:layout_below="@id/login_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@mipmap/jiubei" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_jiubei"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_ll_register"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有账号？"
            android:textColor="@color/material_textBlack_secondaryText"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/login_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="@color/material_textBlack_black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | 其他方式登录"
            android:id="@+id/login_tv_other"
            android:textColor="@color/material_textBlack_secondaryText"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/login_rl_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_rl"
        android:layout_marginLeft="@dimen/margin_36"
        android:layout_marginRight="@dimen/margin_36"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_radius_5"
        android:elevation="10dp">

        <TextView
            android:id="@+id/login_tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/qq"
            android:gravity="center"
            android:text="QQ"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/login_tv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/weixin"
            android:gravity="center"
            android:text="微信"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/login_tv_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:layout_marginTop="28dp"

            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/weibo"
            android:gravity="center"
            android:text="微博"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_below="@id/login_tv_qq"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="12dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/login_tv_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="6dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="13dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:drawableLeft="@mipmap/quxiao"
            android:gravity="center"
            android:layout_below="@id/login_tv_qq"
            android:text="取消"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

</RelativeLayout>