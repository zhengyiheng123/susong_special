<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:background="@drawable/bg_bottom_line"
    android:paddingBottom="20dp"
    android:paddingTop="12dp"
    android:layout_marginRight="12dp"
    >
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/head"
    android:id="@+id/evaluate_iv"
    android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14"
        android:textColor="@color/material_textBlack_black"
        android:text="Taylor Swift"
        android:layout_toRightOf="@id/evaluate_iv"
        android:id="@+id/evaluate_name"
        android:paddingLeft="4dp"
        android:paddingTop="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14"
        android:textColor="@color/material_textBlack_secondaryText"
        android:text="2016-11-25 黑教皇城堡庄园红葡萄酒750ml*1"
        android:layout_toRightOf="@id/evaluate_iv"
        android:layout_below="@id/evaluate_name"
        android:id="@+id/evaluate_time"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14"
        android:textColor="@color/material_textBlack_black"
        android:text="Taylor Swift"
        android:layout_toRightOf="@id/evaluate_iv"
        android:id="@+id/evaluate_content"
        android:layout_below="@id/evaluate_time"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/evaluate_iv"
        android:layout_below="@id/evaluate_content"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:id="@+id/evaluate_ll"
        >
        <ImageView
            android:layout_width="107dp"
            android:layout_height="65dp"

            android:scaleType="centerCrop"
            android:layout_marginRight="6dp"
            android:id="@+id/evaluate_ll_iv1"
            />
        <ImageView
            android:layout_width="107dp"
            android:layout_height="65dp"

            android:scaleType="centerCrop"
            android:id="@+id/evaluate_ll_iv2"
            />


    </LinearLayout>
</RelativeLayout>