<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:scrollbars="none"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingRight="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/service_iv_generalize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/tuiguang"
                />

            <ImageView
                android:layout_below="@+id/service_iv_generalize"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/margin_8"
                android:id="@+id/service_iv_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/shangchang" />

            <ImageView
                android:layout_below="@+id/service_iv_market"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/margin_8"
                android:id="@+id/service_iv_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/zixun" />

            <ImageView
                android:layout_below="@+id/service_iv_service"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:id="@+id/service_iv_steward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_below="@+id/service_iv_steward"
                android:layout_marginTop="@dimen/margin_8"
                android:scaleType="fitXY"
                android:id="@+id/service_iv_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/huodong" />
        </RelativeLayout>
    </ScrollView>
