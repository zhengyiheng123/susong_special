<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_shop_chart"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_8"
    android:paddingBottom="@dimen/padding_8"
    >
    <com.xyd.susong.view.SmartImageveiw
        android:id="@+id/goods_img"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/goods3"
        />
    <TextView
        android:layout_marginLeft="@dimen/margin_8"
        android:id="@+id/tv_goods_name"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宿松特产椒盐西瓜子休闲零食"
        android:layout_below="@+id/goods_img"
        />
    <TextView
        android:id="@+id/tv_price"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_name"
        android:text="￥65.6"
        android:textSize="@dimen/text_16"
        android:textColor="@color/theme_color"
        />
    <ImageView
        android:id="@+id/iv_shopchart"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shop_chart"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_goods_name"
        />
</RelativeLayout>