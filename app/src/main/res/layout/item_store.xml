<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="3dp"
    android:paddingTop="8dp"
    app:cardCornerRadius="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xyd.susong.view.SmartImageveiw
        android:id="@+id/store_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
         />
    <TextView
        android:layout_marginTop="@dimen/margin_12"
        android:id="@+id/store_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="100.00"
        android:textColor="@color/material_textBlack_black"
        android:textSize="@dimen/text_18" />
    <TextView
        android:id="@+id/store_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_iv"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="12dp"
        android:drawablePadding="4dp"
        android:text="撒范德萨发"
        android:textColor="@color/theme_color"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/text_18" />

    <TextView
        android:visibility="gone"
        android:layout_marginRight="@dimen/margin_12"
        android:id="@+id/store_tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_tv_title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:text="萨福克健身房"
        android:layout_marginBottom="16dp"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_16" />

</RelativeLayout>
</android.support.v7.widget.CardView>