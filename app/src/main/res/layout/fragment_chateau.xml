<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_login"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:singleLine="true"
            android:lines="1"
            android:cursorVisible="false"
            android:id="@+id/chateau_edt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@mipmap/sousuo1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:hint="酒庄搜索"
            android:textSize="@dimen/text_16"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="10dp"
            android:id="@+id/chateau_gv">

        </GridView>
    </LinearLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="10.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:id="@+id/chateau_iv_arrows"
        android:src="@mipmap/shuangjiantou"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:background="@color/line" />
    <include layout="@layout/base_srl_rv"/>

</LinearLayout>