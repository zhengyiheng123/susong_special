<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:elevation="@dimen/padding_4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/material_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/title"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_18" />

        <FrameLayout
            android:id="@+id/home_frame"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/menu" />
        </FrameLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0"

        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/theme_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/material_white"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/main_ll_home"
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_home"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/home" />

            <TextView
                android:id="@+id/main_tv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/main_ll_mall"
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_mall"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/mall_hui"
                />

            <TextView
                android:id="@+id/main_tv_mall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:gravity="center"
                android:text="商城"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/main_ll_service"
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_service"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/service_hui" />

            <TextView
                android:id="@+id/main_tv_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:gravity="center"
                android:text="服务"
                android:textColor="@color/material_textBlack_secondaryText"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/main_ll_chart"
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_chart"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/shop_chart_hui"
                />

            <TextView
                android:id="@+id/main_tv_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:gravity="center"
                android:text="购物车"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/main_ll_wode"
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_wode"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/mine_hui" />

            <TextView
                android:id="@+id/main_tv_wode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/material_textBlack_secondaryText"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
