<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@mipmap/yinyingbeijing"
    >

    <ImageView
        android:id="@+id/order_iv"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:scaleType="fitXY"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="x1"
        android:layout_marginRight="12dp"
        android:id="@+id/order_nums"
        android:layout_alignTop="@id/order_iv"
        />

    <TextView
        android:id="@+id/order_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/order_nums"
        android:text="法国波尔兰葡萄酒 750ml"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_16"
        android:layout_toRightOf="@id/order_iv"
        android:layout_alignTop="@id/order_iv"
         />

    <TextView
        android:id="@+id/order_tv_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_tv_title"
        android:layout_toRightOf="@id/order_iv"
        android:text="WINE BOTTLE MOCKUP"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_14" />


    <TextView
        android:id="@+id/order_item_tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_tv_title1"
        android:layout_toRightOf="@id/order_iv"
        android:text="￥200.00"
        android:layout_marginTop="4dp"
        android:textColor="@color/material_grey_800"
        android:textSize="@dimen/text_14" />
    <TextView
        android:id="@+id/order_item_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_tv_title1"
        android:layout_alignParentRight="true"
        android:paddingRight="12dp"
        android:text="交易成功"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:textColor="@color/material_amber_A700"
        android:textSize="@dimen/text_14" />
    <TextView
        android:id="@+id/order_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_item_tv_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="待收货"
        android:layout_marginBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/bg_order"
        android:gravity="center"
        android:textColor="@color/material_grey_800"
        android:textSize="@dimen/text_14" />
    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/order_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/order_item_tv_price"
       android:layout_toLeftOf="@id/order_tv_right"
        android:layout_marginRight="12dp"
        android:text="查看物流"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/bg_order"
        android:gravity="center"
        android:textColor="@color/material_grey_800"
        android:textSize="@dimen/text_14" />
</RelativeLayout>